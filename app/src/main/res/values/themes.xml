<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Faceplant" parent="Theme.MaterialComponents.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/light_green</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Faceplant.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="FaceplantButton">
        <item name="android:textSize">@dimen/btn_text_size</item>
        <item name="android:layout_width">@dimen/btn_width</item>
        <item name="android:layout_height">@dimen/btn_height</item>
        <item name="android:textColor">@color/btn_text</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="FaceplantEditText">
        <item name="android:textColor">@color/et_text_color</item>
        <item name="android:layout_width">@dimen/btn_width</item>
        <item name="android:layout_height">@dimen/btn_height</item>
    </style>
</resources>