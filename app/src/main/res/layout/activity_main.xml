<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/start_page_image"
    tools:context=".activities.MainActivity">

    <com.example.faceplant.utils.FaceplantTextViewBold
        android:id="@+id/start_page_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal"
        android:text="@string/app_name"
        android:textSize="@dimen/title_text_size"
        android:textColor="@color/green"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <com.example.faceplant.utils.FaceplantButton
        android:id="@+id/start_page_sign_in"
        android:background="@drawable/faceplant_blue_button"
        android:text="@string/sign_in"
        android:textAllCaps="false"
        style="@style/FaceplantButton"
        app:layout_constraintBottom_toTopOf="@id/sign_in_later"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.973" />

    <com.example.faceplant.utils.FaceplantButton
        android:id="@+id/sign_in_later"
        android:layout_marginBottom="60dp"
        android:background="@drawable/faceplant_red_button"
        android:text="@string/sign_in_later"
        android:textAllCaps="false"
        style="@style/FaceplantButton"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>