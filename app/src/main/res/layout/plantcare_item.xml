<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/light_green">

    <!--This is the layout for one cell in the gridlayout-->

    <ImageView
        android:id="@+id/PlantCare_Plantimage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/defaultplant" />

    <TextView
        android:id="@+id/Plantcare_Planttitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="@string/plantcare_item_title"
        app:layout_constraintTop_toBottomOf="@id/PlantCare_Plantimage"
        app:layout_constraintStart_toStartOf="@id/PlantCare_Plantimage"
        app:layout_constraintEnd_toEndOf="@id/PlantCare_Plantimage">
    </TextView>




</androidx.constraintlayout.widget.ConstraintLayout>
