<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.PlantCareActivity"
    android:background="@color/light_green"
    >

    <TextView
        android:id="@+id/plantcare_drawermenu_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_menu"
        android:drawableLeft="@drawable/ic_menu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/Plantcare_title_textview"
        android:layout_marginLeft="10dp"
        >
    </TextView>

    <TextView
        android:id="@+id/Plantcare_title_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-medium"
        android:text="@string/plantcare_title"
        android:textColor="@color/black"
        android:textSize="@dimen/app_name_text_size"
        app:layout_constraintBottom_toTopOf="@id/PlantCare_listView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />


    <EditText
        android:id="@+id/PlantCare_searchfield_edittext"
        style="@style/FaceplantEditText"
        android:layout_marginTop="24dp"
        android:hint="@string/plantcare_search_hint"
        android:drawableStart="@drawable/ic_search_icon"
        android:drawableLeft="@drawable/ic_search_icon"
        app:layout_constraintStart_toStartOf="@id/PlantCare_plant1_imageview"
        app:layout_constraintEnd_toEndOf="@id/PlantCare_plant2_imageview"
        app:layout_constraintTop_toBottomOf="@id/Plantcare_title_textview">

    </EditText>

    <ImageView
        android:id="@+id/PlantCare_plant1_imageview"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toStartOf="@id/PlantCare_plant2_imageview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/PlantCare_searchfield_edittext"
        tools:srcCompat="@drawable/defaultplant" />


    <ImageView
        android:id="@+id/PlantCare_plant2_imageview"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/PlantCare_plant1_imageview"
        app:layout_constraintTop_toBottomOf="@id/PlantCare_searchfield_edittext"
        tools:srcCompat="@drawable/defaultplant" />


    <ImageView
        android:id="@+id/PlantCare_plant3_imageview"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toStartOf="@id/PlantCare_plant4_imageview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/PlantCare_plant1_textview"
        tools:srcCompat="@drawable/defaultplant" />

    <ImageView
        android:id="@+id/PlantCare_plant4_imageview"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/PlantCare_plant3_imageview"
        app:layout_constraintTop_toBottomOf="@id/PlantCare_plant2_textview"
        tools:srcCompat="@drawable/defaultplant" />

    <ImageView
        android:id="@+id/PlantCare_plant5_imageview"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toStartOf="@id/PlantCare_plant6_imageview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/PlantCare_plant3_textview"
        tools:srcCompat="@drawable/defaultplant" />

    <ImageView
        android:id="@+id/PlantCare_plant6_imageview"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/PlantCare_plant5_imageview"
        app:layout_constraintTop_toBottomOf="@id/PlantCare_plant4_textview"
        tools:srcCompat="@drawable/defaultplant" />

    <TextView
        android:id="@+id/PlantCare_plant1_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@id/PlantCare_plant1_imageview"
        app:layout_constraintEnd_toEndOf="@id/PlantCare_plant1_imageview"
        app:layout_constraintTop_toBottomOf="@id/PlantCare_plant1_imageview"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/PlantCare_plant2_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@id/PlantCare_plant2_imageview"
        app:layout_constraintEnd_toEndOf="@id/PlantCare_plant2_imageview"
        app:layout_constraintTop_toBottomOf="@id/PlantCare_plant2_imageview"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/PlantCare_plant3_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@id/PlantCare_plant3_imageview"
        app:layout_constraintEnd_toEndOf="@id/PlantCare_plant3_imageview"
        app:layout_constraintTop_toBottomOf="@id/PlantCare_plant3_imageview"
        android:layout_marginTop="10dp"

        />

    <TextView
        android:id="@+id/PlantCare_plant4_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@id/PlantCare_plant4_imageview"
        app:layout_constraintEnd_toEndOf="@id/PlantCare_plant4_imageview"
        app:layout_constraintTop_toBottomOf="@id/PlantCare_plant4_imageview"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/PlantCare_plant5_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@id/PlantCare_plant5_imageview"
        app:layout_constraintEnd_toEndOf="@id/PlantCare_plant5_imageview"
        app:layout_constraintTop_toBottomOf="@id/PlantCare_plant5_imageview"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/PlantCare_plant6_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@id/PlantCare_plant6_imageview"
        app:layout_constraintEnd_toEndOf="@id/PlantCare_plant6_imageview"
        app:layout_constraintTop_toBottomOf="@id/PlantCare_plant6_imageview"
        android:layout_marginTop="10dp"/>




</androidx.constraintlayout.widget.ConstraintLayout>