<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.plantCare.PlantCareProfileActivity"
    android:background="@color/light_green">

    <!--Textview that represents the top title-->
    <TextView
        android:id="@+id/plantcare_profile_title_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test title"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/plantcare_profile_imageview"
        app:layout_constraintEnd_toEndOf="@id/plantcare_profile_imageview"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp">
    </TextView>

    <!--Image of the plant,fetched from firestore-->
    <ImageView
        android:id="@+id/plantcare_profile_imageview"
        android:layout_width="120dp"
        android:layout_height="140dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/plantcare_profile_title_textview"
        app:layout_constraintEnd_toEndOf="parent"
        tools:srcCompat="@drawable/defaultplant"
        android:layout_marginTop="20dp">
    </ImageView>

    <!--clickable icon light-->

    <!-- text under clickable icon light -->
    <ImageView
        android:id="@+id/plantcare_profile_lighticon"
        android:layout_width="43dp"
        android:layout_height="39dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/plantcare_profile_imageview"
        tools:srcCompat="@drawable/ic_sunlight">

    </ImageView>

    <!--text under clickable icon light-->
    <TextView
        android:id="@+id/plantcare_profile_icontext_light"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/plantcare_icontext_light"
        app:layout_constraintStart_toStartOf="@id/plantcare_profile_lighticon"
        app:layout_constraintTop_toBottomOf="@id/plantcare_profile_lighticon"
        app:layout_constraintEnd_toEndOf="@id/plantcare_profile_lighticon"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="7dp">
    </TextView>

    <!--clickable icon water-->
    <ImageView
        android:id="@+id/plantcare_profile_watericon"
        android:layout_width="43dp"
        android:layout_height="39dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toEndOf="@id/plantcare_profile_lighticon"
        app:layout_constraintEnd_toStartOf="@id/plantcare_profile_nutritionicon"
        app:layout_constraintTop_toBottomOf="@id/plantcare_profile_imageview"
        tools:srcCompat="@drawable/ic_waterdrop_white">

    </ImageView>

    <!--text under clickable icon water-->
    <TextView
        android:id="@+id/plantcare_profile_icontext_water"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/plantcare_icontext_water"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="7dp"

        app:layout_constraintTop_toBottomOf="@id/plantcare_profile_watericon"
        app:layout_constraintStart_toStartOf="@id/plantcare_profile_watericon"
        app:layout_constraintEnd_toEndOf="@id/plantcare_profile_watericon">
    </TextView>

    <!--clickable icon nutrition-->
    <ImageView
        android:id="@+id/plantcare_profile_nutritionicon"
        android:layout_width="43dp"
        android:layout_height="39dp"
        app:layout_constraintStart_toEndOf="@id/plantcare_profile_watericon"
        app:layout_constraintTop_toBottomOf="@id/plantcare_profile_imageview"
        app:layout_constraintEnd_toStartOf="@id/plantcare_profile_genralinfo"
        tools:srcCompat="@drawable/ic_nutrition_icon"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp">

    </ImageView>

    <!--text under clickable icon nutrition-->
    <TextView
        android:id="@+id/plantcare_profile_icontext_nutrition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/plantcare_icontext_nutritions"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="7dp"
        app:layout_constraintStart_toStartOf="@id/plantcare_profile_nutritionicon"
        app:layout_constraintEnd_toEndOf="@id/plantcare_profile_nutritionicon"
        app:layout_constraintTop_toBottomOf="@id/plantcare_profile_nutritionicon">
    </TextView>

    <!--clickable icon general info-->
    <ImageView
        android:id="@+id/plantcare_profile_genralinfo"
        android:layout_width="43dp"
        android:layout_height="39dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        app:layout_constraintStart_toEndOf="@id/plantcare_profile_nutritionicon"
        app:layout_constraintTop_toBottomOf="@id/plantcare_profile_imageview"
        app:layout_constraintEnd_toEndOf="parent"
        tools:srcCompat="@drawable/ic_infosymbol">
    </ImageView>

    <!--text under clickable icon general info-->
    <TextView
        android:id="@+id/plantcare_profile_icontext_generalinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/plantcare_icontext_genreal_info"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="7dp"
        app:layout_constraintStart_toStartOf="@id/plantcare_profile_genralinfo"
        app:layout_constraintTop_toBottomOf="@id/plantcare_profile_genralinfo"
        app:layout_constraintEnd_toEndOf="@id/plantcare_profile_genralinfo"

        >

    </TextView>

    <!--Framelayout as container to block out an area of the screen to display fragments-->
    <FrameLayout
        android:id="@+id/plantcare_profile_framelayout_fragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/plantcare_profile_icontext_light"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
